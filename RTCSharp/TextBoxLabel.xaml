<UserControl x:Class="RTCSharp.TextBoxLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RTCSharp"
             mc:Ignorable="d"
             x:Name="parent"
             d:DesignHeight="26" Width="160">
    <Grid DataContext="{Binding ElementName=parent}">
        <StackPanel Orientation="Horizontal">
            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="{Binding Path=Value}" Height="22" Width="60" IsReadOnly="True" Margin="0,0,0,4"/>
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" TextAlignment="Left" Text="{Binding Path=LabelText}" Height="24" Width="95" Margin="5,2,0,0" FontSize="11"/>
        </StackPanel>
    </Grid>
</UserControl>
